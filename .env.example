# ===========================================
# Multi-Chain Transaction Lookup - Environment Variables
# ===========================================
# Copy this file to .env and fill in actual values
# cp .env.example .env

# -------------------------------------------
# OpenAI Settings (Required)
# -------------------------------------------
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# -------------------------------------------
# MongoDB Atlas Settings (Required)
# -------------------------------------------
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=chatbot_db

# -------------------------------------------
# Vector Search Settings
# -------------------------------------------
SIMILARITY_THRESHOLD=0.7
VECTOR_SEARCH_LIMIT=3

# -------------------------------------------
# Search API Settings (Optional - at least one recommended)
# -------------------------------------------
GOOGLE_API_KEY=
GOOGLE_CX=
SERPER_API_KEY=
TAVILY_API_KEY=
BING_SEARCH_API_KEY=
SEARCH_API_PRIORITY=google,serper,tavily,bing,duckduckgo
SEARCH_API=google

# -------------------------------------------
# Blockchain API Keys (Optional)
# -------------------------------------------
ETHEREUM_API_KEY=
BNB_SMART_CHAIN_API_KEY=
POLYGON_API_KEY=
ARBITRUM_API_KEY=
OPTIMISM_API_KEY=

# -------------------------------------------
# LangSmith Tracing (Optional)
# -------------------------------------------
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=multi-chain-tx-lookup

# -------------------------------------------
# Logging Settings
# -------------------------------------------
LOG_LEVEL=INFO